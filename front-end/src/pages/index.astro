---
import BaseLayout from '@/layouts/BaseLayout.astro'
import { buttonVariants } from '@/components/ui/button'
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/ui/card"



const response = await fetch('http://127.0.0.1:5067/api/Review');
const data = await response.json();

let ratings: string[] = [];

for (let i = 0; i < data.length; i++) {
  let rating = "";
  for (let j = 0; j < data[i].rating; j++) {
      rating += "⭐️";
  }

  ratings.push(rating)
}

---


<BaseLayout title="Pokemon Reviews" description="Pokemon Reviews">
  <section class="container flex flex-wrap  items-center gap-6 pb-8 pt-6 md:py-10">

    {data.map((data,index) => <div class="shrink grow basis-1/3"> <Card >
      <CardHeader>
        <CardTitle>{data.title}</CardTitle>
      </CardHeader>
      <CardContent>
        <p>{data.text}</p>
      </CardContent>
      <CardContent>
        <p>{ratings[index]}</p>
      </CardContent>
      <CardFooter>
        <a class={buttonVariants({ variant: 'link' })} href="/review/details">View Details</a>

      </CardFooter>
    </Card></div>
    )}

  </section>
</BaseLayout>
